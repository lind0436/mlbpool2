<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">

        <div class="container full-page-content">
        <div class="col-md-3"></div>
        <div class="col-md-6">

        <h1>Create a new season</h1>

        <p>Enter the year of the new season to create and press Go.  You will then be redirected
        to the next page to add NFL players to the new season.</p>

        <form class="standard-form" action="" method="POST">
        <input name="new_season_input" value="${new_season_input}"
                           placeholder="Enter the year of the new season to create"
                           class="form-control">
        <input name="season_start_date_input" value="${season_start_date_input}"
                           placeholder="Enter the date of the first game (YYYY-MM-DD)"
                           class="form-control">
                    <button type="submit" class="btn btn-success">Go</button>
        </form>



        </div>
        </div>
    </div>
</div>

