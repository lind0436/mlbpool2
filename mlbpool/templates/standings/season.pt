<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">

        <div class="container">
            <div class="row upcoming">
                <div class="col-md-3"></div>
                <div class="col-md-6">


                    <h1>${season} Standings</h1>
                    <h2 align="center">Standings through ${date_updated}</h2>

                    <div class="alert alert-warning" role="alert" align="center">Wild Card picks will be finalized
                        at the end of the season.</div>

                      <table class="table table-striped">
                          <thead>
                            <tr>
                                <th>Name</th>
                                <th>Points</th>
                            </tr>
                          </thead>
                          <tbody>
                           <span tal:repeat="s current_standings" >
                               <tr>
                                   <td><a href="../player-standings/${s.id}">${s.first_name} ${s.last_name}</a></td>
                                   <td tal:content="string:${s.total_points}"></td>
                               </tr>
                       </span>
                          </tbody>
                     </table>
                </div>
            </div>
        </div>
    </div>
</div>